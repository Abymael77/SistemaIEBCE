@model SistemaIEBCE.Models.ViewModels.AsigEstudianteVM

@{
    ViewData["Title"] = "ListEstudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>ListEstudiante</h1>
<h2>Ciclo => @ViewBag.IdBlkAsCu</h2>*@

<div class="bg-white p-4 mt-lg-5">
    
        <div class="row mb-3 ">
            <div class="col-7">
                <h3>Lista de Estudiantes </h3>
                <p class="h6">@ViewData["NomCurso"] - @ViewData["NomBloque"] </p>
                <p class="h6">@ViewData["NomGrado"] - @ViewData["NomSeccion"] - @ViewData["Anio"]</p>
            </div>
            <div class="col-5 text-right">
                <a href="/Secretario/Nota/Bloque/?IdAsigCurso=@ViewData["IdAsigCurso1"]&IdCicloEscolar=@ViewData["IdCicloEscolar"]" class="btn text-white bg-primary m-1"> <i class="fa-solid fa-arrow-left"></i> Volver</a>
                <button class="guardar btn btn-dark" onclick="RegistrarNota(@ViewBag.IdBlkAsCu)" type="submit"> <i class="fa-solid fa-floppy-disk"></i> Guardar Notas</button>
            </div>
        </div>
        <table id="listEstu" class="display table table-bordered table-hover" style="width:100%">
            <thead>
                <tr class="bg-primary text-white">
                    <th>Id</th>
                    <th>IdAsEs</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Nota</th>
                </tr>
            </thead>
            <tbody>
                @*<tr>
                    <td>Tiger Nixon</td>
                    <td><input type="text" id="row-1-age" name="row-1-age" value="61"></td>
                </tr>*@
            </tbody>
            
        </table>
</div>

@section Scripts{

    <script src="~/js/ListEstudiante.js"></script>

    <script>
        $(document).ready(function () {

            cargarDatatableLsEst(@ViewData["idBlkAsCu"], @ViewData["IdCicloEscolar"], @ViewData["IdAsigCurso1"]);

            $('button.guardar').click(function () {
                //innota
            });


        });
    </script>

}