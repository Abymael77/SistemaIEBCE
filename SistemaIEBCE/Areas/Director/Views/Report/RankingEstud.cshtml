@using SistemaIEBCE.Models.ViewModels

@{
    ViewData["Title"] = "RankingEstud";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var num = 0;
    var ret = Convert.ToInt32(ViewData["return"]);
}

<div class="bg-white mt-5 container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <h1 class="text-center my-4">Estudiantes Destacados @ViewData["anio"]</h1>
        </div>
        <div class="col-2 text-center p-4">
            @if (ret == 1)
            {
                <a class="btn btn-primary" asp-area="Invitado" asp-controller="Home" asp-action="Inicio"> <i class="fa-solid fa-arrow-left"></i> Volver</a>
            }
            else
            {
                <a class="btn btn-primary" asp-controller="CicloEcolar" asp-action="Ciclos"> <i class="fa-solid fa-arrow-left"></i> Volver</a>
            }
        </div>
        @foreach (var item in ViewData["ntTop3"] as IEnumerable<NotaRep>)
        {
            <div class="col-xl-3 col-sm-6 col-12 mb-4 text-center p-4 border shadow m-4 rounded">
                <p class="h6 text-uppercase">@item.NomEstudiante @item.ApellEstudiante</p>
                @if (item.Sexo == "M")
                {
                    <img class="img-fluid" src="~/img/Man_Student.svg" />
                }
                else
                {
                    <img class="img-fluid" src="~/img/Woman_Student.svg" />
                }
                <p class="h3"><i class="fa-solid fa-check-to-slot"></i> @item.Nota.ToString("0.0000")</p>
                <p class="h6 text-uppercase">@item.NomGrado - @item.NomSeccion</p>
            </div>
        }

        <div class="col-12 px-4">
            <table class="table text-primary table-bordered table-responsive-lg table-hover">
                <thead class="bg-primary text-light">
                    <tr>
                        <td>#</td>
                        <td>Nombres</td>
                        <td>Apellidos</td>
                        <td>Ciclo</td>
                        <td>Punteo</td>
                    </tr>
                </thead>
                <tbody class="text-uppercase">
                    @foreach (var item in ViewData["notas"] as IEnumerable<NotaRep>)
                    {
                        <tr>
                            <td>@Convert.ToInt32(num = num + 1)</td>
                            <td>@item.NomEstudiante</td>
                            <td>@item.ApellEstudiante</td>
                            <td>@item.NomGrado - @item.NomSeccion</td>
                            <td>@item.Nota.ToString("0.0000")</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>

