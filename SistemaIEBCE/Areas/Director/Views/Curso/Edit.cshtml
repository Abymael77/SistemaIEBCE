@model SistemaIEBCE.Models.Curso

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var message = TempData["error"] ?? string.Empty;
}

<div class="container-fluid bg-white p-4 mt-4">
    <h3 class="mt-4 text-center">Editar Curso</h3>
    <form method="post" asp-action="Edit">
        <div class="row px-2 mx-2 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-12 mt-4">
                <div class="form-group row mt-3">
                    <label asp-for="NomCurso" class="col-sm-2 col-form-label col-form-label-sm"></label>
                    <div class="col-10">
                        <input asp-for="NomCurso" class="form-control" />
                        <span asp-validation-for="NomCurso" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <label asp-for="Descripcion" class="col-sm-2 col-form-label col-form-label-sm"></label>
                    <div class="col-10">
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <label asp-for="Estado" class="col-sm-2 col-form-label col-form-label-sm"></label>
                    <div class="col-10">
                        <select asp-for="Estado" class="form-control">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row mt-3 row d-flex justify-content-center">
                    <div class="row">
                        <div class="mx-2">
                            <button type="submit" class="btn text-light bg-primary px-5 form-control" asp-route-idCurso="@Model.Id">Actualizar</button>
                        </div>
                        <div class="mx-2">
                            <a asp-action="Index" class="btn btn-secondary px-5 form-control">Volver</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>

</div>

    @section Scripts{
        <script>
        $(document).ready(function () {
                var message = '@message';
                if (message) {
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'bottom-end',
                        showConfirmButton: false,
                        timer: 2000,
                        timerProgressBar: true,
                        didOpen: (toast) => {
                            toast.addEventListener('mouseenter', Swal.stopTimer)
                            toast.addEventListener('mouseleave', Swal.resumeTimer)
                        }
                    })
                    Toast.fire({
                        icon: 'error',
                        title: 'Formulario Invalido: ' + message
                    })
                }
            });
        </script>
    }

