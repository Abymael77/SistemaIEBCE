@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}


<div class="row justify-content-around mt-3">
    <div class="col-md-5 bg-primary text-white p-5 text-center">
        <section>
            <form id="account" method="post">
                <div class="row justify-content-center mb-4">
                    <img class="img-fluid" src="~/img/logoIEBCE.png" />
                </div>
                <h4>Iniciar Sesión</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Correo Electronico</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-light">Iniciar Sesión</button>
                </div>
                <div class="form-group">
                    <p>
                        <a class="text-white text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Recuperar Contaseña?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
